<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"   android:color="#9575CD">
    <item android:state_pressed = "true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp"
                />
            <solid
                android:color="#673AB7"
                />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#311B92"
                />
        </shape>
    </item>

    <item android:state_pressed = "false">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp"
                />
            <solid
                android:color="#673AB7"
                />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#311B92"
                />
        </shape>
    </item>
</ripple>